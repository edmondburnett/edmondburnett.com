{% extends "layout.html.j2" %}
{% block content %}

<h1>All Posts ({{ posts.len() }})</h1>
<div class="posts-list">
{% for post in posts %}
    <div class="posts-list-item">
        <time class="posts-list-date">{{ post.short_date() }}</time>
        <div class="posts-list-content">
            <span class="posts-list-title"><a href="/post/{{ post.id }}">{{ post.title }}</a><span>
            <p class="posts-list-description">{{ post.description }}</p>
        </div>
    </div>
{% endfor %}
</div>

{% endblock %}
